{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "sourceMap": true,
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["./dist/"]
}